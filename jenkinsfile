pipeline{
    agent any
    tools{
        maven 'm1'
    }
    stages{
        stage('clone'){
            steps{
            checkout scmGit(branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[credentialsId: 'ssh-key-for-git', url: 'https://github.com/meghamb27/b6-java.git']])
        }
    }
    stage('build'){
            steps{
            sh 'mvn clean install'
        }
    }
    stage('test'){
            steps{
            sh 'mvn test'
        }
        post{
            always{
                archiveArtifacts artifacts: 'target/*.jar', followSymlinks: false
                
            }
        }
    }
	stage('run'){
            steps{
            sh 'chmod 777 scripts/deliver.sh'
			sh './scripts/deliver.sh'
        }
    }
  }
}
